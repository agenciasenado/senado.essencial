doctype html

html(lang='pt')

  head
    meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, minimum-scale=1.0, user-scalable=no')
    link(href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet')
    link(href=require('./styles/thin.less') rel='stylesheet')

    title
      - var version = require('../package.json').version
      | senado.essencial #{version}

  body
    include ./pug/thin/navglobal
    include ./pug/thin/portaltopo
    .container
      p.eta senado.essencial
        span.milli.text-muted  #{version}
    include ./pug/thin/footer
    include pug/commons/analytics
